<h2>What payment option would you like to use for the class?</h2>

<%= form_for @student, url: payment_options_path, method: :create  do |f| %>

  <div>
    <%= f.label :plan_id %>
    <%= f.select(:plan_id, Plan.all.collect {|p| [ p.name, p.id ] }) %>
  </div>

  <div>
    <%= f.submit "Submit", class: 'btn btn-large btn-info' %>
  </div>

<% end %>

