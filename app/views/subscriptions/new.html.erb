<h1>Please verify your bank account</h1>

<%= form_for @subscription do |f| %>

  <div><%= label_tag :name, "Name on account" %><br />
  <%= text_field_tag :name, nil, autofocus: true %></div>

  <div><%= label_tag :bank_account_number, "Bank account number" %><br />
  <%= text_field_tag :bank_account_number %></div>

  <div><%= label_tag :routing_number, "Routing number" %><br />
    <%= text_field_tag :routing_number %></div>

  <input id="subscription_account_uri" name="subscription[account_uri]" type="hidden">

  <div><%= f.submit "Add bank account", id: "account-submit-button" %></div>
<% end %>
