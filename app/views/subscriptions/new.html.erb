<h1>Please enter your bank account information</h1>

<%= form_for @subscription do |f| %>
  <div>
    <%= label_tag :name, "Name on account" %>
    <%= text_field_tag :name, nil, autofocus: true %>
  </div>

  <div>
    <%= label_tag :bank_account_number, "Bank account number" %>
    <%= text_field_tag :bank_account_number %>
  </div>

  <div>
    <%= label_tag :routing_number, "Routing number" %>
    <%= text_field_tag :routing_number %>
  </div>

  <input id="subscription_account_uri" name="subscription[account_uri]" type="hidden">

  <div><%= f.submit "Add bank account", id: "account-submit-button", class: "btn" %></div>
<% end %>
