<h1>Please enter your bank account information</h1>

<%= form_for @subscription do |f| %>

  <div><%= f.label :first_deposit, "First deposit amount" %><br />
  <%= f.text_field :first_deposit, autofocus: true %></div>

  <div><%= f.label :second_deposit, "Second deposit amount" %><br />
  <%= f.text_field :second_deposit %></div>

  <div><%= f.submit "Confirm Account & Start Payments", id: "account-verify-button" %></div>
<% end %>
