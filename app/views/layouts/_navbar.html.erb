<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav pull-right">
      <% if current_student && current_student.courses.any? %>
        <% if current_student.courses.include?(ruby_january_internship_course) %>
          <li><%= link_to 'January 2016 Internships', course_internships_path(ruby_january_internship_course) %></li>
        <% elsif current_student.courses.include?(php_january_internship_course) %>
          <li><%= link_to 'January 2016 Internships', course_internships_path(php_january_internship_course) %></li>
        <% elsif current_student.courses.include?(java_january_internship_course) %>
          <li><%= link_to 'January 2016 Internships', course_internships_path(java_january_internship_course) %></li>
        <% end %>
        <li><%= link_to 'Pair suggestions', random_pairs_path %></li>
        <li><%= link_to 'Internships', course_internships_path(current_student.course) %>
        <li><%= link_to 'Payments', payments_path %></li>
        <li><%= link_to 'Code Reviews', course_code_reviews_path(current_student.course) %></li>
        <li><%= link_to 'Attendance record', attendance_statistics_path %></li>
        <li><%= link_to 'Profile', edit_student_registration_path %></li>
        <li><%= link_to "Log out", destroy_student_session_path, data: { method: :delete }, class: 'log-in' %></li>
      <% elsif current_student && current_student.courses.empty? %>
        <li><%= link_to 'Payments', payments_path %></li>
        <li><%= link_to 'Profile', edit_student_registration_path %></li>
        <li><%= link_to "Log out", destroy_student_session_path, data: { method: :delete }, class: 'log-in' %></li>
      <% elsif current_admin %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b>
            <%= current_admin.current_course.description %>
            <%= link_to '(edit)', edit_course_path(current_admin.current_course), class: 'fixit' %>
          </a>
          <ul class="dropdown-menu">
            <% Course.all.each do |course| %>
              <li><%= link_to course.description, admin_path(current_admin, admin: { current_course_id: course.id }), method: :patch %></li>
            <% end %>
            <li class="new-course"><%= link_to '+ Add a course', new_course_path %></li>
          </ul>
        </li>
        <li><%= link_to 'Student Roster', course_students_path(current_admin.current_course) %></li>
        <li><%= link_to 'Code Reviews', course_code_reviews_path(current_admin.current_course) %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b> Attendance
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Attendance signin/signout', attendance_path %></li>
            <li><%= link_to 'Attendance statistics', course_attendance_statistics_path(current_admin.current_course) %></li>
            <li><%= link_to 'Attendance by day', course_day_attendance_records_path(current_admin.current_course) %></li>
            <li><%= link_to 'Fix attendance records', new_attendance_record_amendment_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b> Invite
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Student', new_student_invitation_path %></li>
            <li><%= link_to 'Admin', new_admin_invitation_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <b class="caret"></b> Internships
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Internships", course_internships_path(current_admin.current_course)  %></li>
            <li><%= link_to "Companies", companies_path %> </li>
          </ul>
        </li>
        <li><%= link_to "Log out", destroy_admin_session_path, data: { method: :delete }, class: 'log-in' %></li>
      <% else %>
        <li><%= link_to "Teacher log in", new_admin_session_path %></li>
        <li><%= link_to "Student log in", new_student_session_path, class: 'log-in' %></li>
      <% end %>
    </ul>
  </div>
</div>
