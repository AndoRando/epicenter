<h1>Confirm your account</h1>

<p>You won't be charged anything at this time.</p>

<%= render '/layouts/errors', :object => @verification %>

<%= form_for @verification, url: '/verification', method: :patch do |f| %>
  <div>
    <%= f.label :first_deposit, "First deposit amount in cents" %>
    $0.<%= f.text_field :first_deposit, autofocus: true %>
  </div>

  <div>
    <%= f.label :second_deposit, "Second deposit amount in cents" %>
    $0.<%= f.text_field :second_deposit %>
  </div>

  <div>
    <%= f.submit "Confirm account", id: "account-verify-button", class: 'btn' %>
  </div>
<% end %>
